{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "name": "zoe-solar-accounting-ocr",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "devCommand": "npm run dev",
  "installCommand": "npm install",

  "env": {
    "VITE_GEMINI_API_KEY": "@vercel_gemini_api_key",
    "VITE_SILICONFLOW_API_KEY": "@vercel_siliconflow_api_key",
    "VITE_SUPABASE_URL": "@vercel_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vercel_supabase_anon_key",
    "VITE_GITLAB_CLIENT_ID": "@vercel_gitlab_client_id",
    "VITE_GITLAB_CLIENT_SECRET": "@vercel_gitlab_client_secret",
    "VITE_GITLAB_API_TOKEN": "@vercel_gitlab_api_token"
  },

  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        },
        {
          "key": "Permissions-Policy",
          "value": "camera=(), microphone=(), geolocation=(), payment=(), usb=(), serial=(), bluetooth=(), nfc=()"
        },
        {
          "key": "Strict-Transport-Security",
          "value": "max-age=31536000; includeSubDomains; preload"
        }
      ]
    },
    {
      "source": "/(.*)\\.(js|css|woff|woff2|ttf|eot|svg|png|jpg|jpeg|gif|ico|pdf)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/(.*)\\.(html)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache"
        }
      ]
    }
  ],

  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],

  "redirects": [
    {
      "source": "/",
      "destination": "/app",
      "permanent": false
    }
  ],

  "cleanUrls": true,

  "trailingSlash": false,

  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },

  "build": {
    "env": {
      "VITE_APP_VERSION": "2026.1.0"
    }
  },

  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 10
    }
  },

  "crons": [
    {
      "path": "/api/cleanup",
      "schedule": "0 2 * * 0"
    }
  ]
}